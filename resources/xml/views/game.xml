<brls:Box
    width="auto"
    height="auto">
    <brls:ScrollingFrame
        id="scrolling"
        width="auto"
        height="auto"
        grow="1.0" >

        <brls:Box
            width="100%"
            height="100%"
            axis="column"
            alignItems="center"
            paddingTop="@style/brls/tab_frame/content_padding_top_bottom"
            paddingBottom="@style/brls/tab_frame/content_padding_top_bottom">

            <!--TITLE/BANNER-->
            <brls:Box
                justifyContent="center"
                width="90%"
                height="200"
                margin="10"
                cornerRadius="15">
                <brls:Image
                    positionType="absolute"
                    imageAlign="center"
                    width="100%"
                    scalingType="fill"
                    cornerRadius="15"
                    id="banner"/>

                <brls:Rectangle
                    id="image_overlay"
                    positionType="absolute"
                    width="100%"
                    cornerRadius="15"
                    height="200px"/>

                <brls:Label
                    positionType="relative"
                    id="title"
                    fontSize="50"
                    width="auto"
                    height="auto"
                    horizontalAlign="center"
                    marginTop="10px"/>
            </brls:Box>

            <!--INFOS-->
            <brls:Box
                width="auto"
                height="auto"
                axis="row"
                paddingTop="@style/brls/tab_frame/content_padding_top_bottom"
                paddingBottom="@style/brls/tab_frame/content_padding_top_bottom"
                justifyContent="spaceBetween">

                <brls:Box
                    width="auto"
                    height="auto"
                    axis="column"
                    margin="10"
                    paddingRight="@style/brls/tab_frame/content_padding_sides"
                    paddingLeft="@style/brls/tab_frame/content_padding_sides">
                    
                    <brls:Label
                        width="auto"
                        height="auto"
                        margin="10"
                        id="tid"
                        horizontalAlign="left"
                        singleLine="true"/>
                    
                    <brls:Label
                        width="auto"
                        height="auto"
                        margin="10"
                        id="publisher"
                        horizontalAlign="left"
                        singleLine="true"/>

                    <brls:Label
                        width="auto"
                        height="auto"
                        margin="10"
                        id="size"
                        horizontalAlign="left"
                        singleLine="true"/>

                </brls:Box>

                <brls:Rectangle
                    id="image_overlay"
                    height="100%"
                    width="5px"
                    color="@theme/brls/header/rectangle"
                    cornerRadius="4"/>

                <brls:Box                    
                    width="auto"
                    height="auto"
                    axis="column"
                    margin="10"
                    paddingRight="@style/brls/tab_frame/content_padding_sides"
                    paddingLeft="@style/brls/tab_frame/content_padding_sides">

                    <brls:Label
                        width="auto"
                        height="auto"
                        margin="10"
                        id="release_date"
                        horizontalAlign="left"
                        singleLine="true"/>
                    
                    <brls:Label
                        width="auto"
                        height="auto"
                        margin="10"
                        id="languages"
                        horizontalAlign="left"
                        singleLine="true"/>

                    <brls:Label
                        width="auto"
                        height="auto"
                        margin="10"
                        id="types"
                        horizontalAlign="left"
                        singleLine="true"/>                    



                </brls:Box>

            </brls:Box>
            
            <!--DESCRIPTION-->
            <brls:Box
                height="auto"
                width="auto"
                axis="column"
                paddingRight="@style/brls/tab_frame/content_padding_sides"
                paddingLeft="@style/brls/tab_frame/content_padding_sides">

                <brls:Header
                    width="auto"
                    height="auto"
                    title="@i18n/app/game/description"
                    marginBottom="30px"/>

                <brls:Label
                    positionType="relative"
                    id="description"
                    width="auto"
                    height="auto"
                    horizontalAlign="left"
                    singleLine="false"/>

                <brls:Header
                    width="auto"
                    height="auto"
                    title="@i18n/app/game/screenshots"
                    marginTop="30px"/>
                            
            </brls:Box>

                                    


            <brls:Box
                width="auto"
                height="auto"
                id="screenshots"
                axis="column">

                <brls:Box
                    height="auto"
                    width="auto"
                    id="screenshots1"
                    axis="row"
                    alignItems="center"
                    paddingRight="@style/brls/tab_frame/content_padding_sides"
                    paddingLeft="@style/brls/tab_frame/content_padding_sides"
                    paddingTop="@style/brls/tab_frame/content_padding_top_bottom"
                    paddingBottom="@style/brls/tab_frame/content_padding_top_bottom">

                </brls:Box>

                <brls:Box
                    height="auto"
                    width="auto"
                    id="screenshots2"
                    axis="row"
                    alignItems="center"
                    paddingRight="@style/brls/tab_frame/content_padding_sides"
                    paddingLeft="@style/brls/tab_frame/content_padding_sides"
                    paddingTop="@style/brls/tab_frame/content_padding_top_bottom"
                    paddingBottom="@style/brls/tab_frame/content_padding_top_bottom">

                </brls:Box>

            </brls:Box>

            <!--<brls:Image
                id="screenshot"
                width="auto"
                height="auto"/>-->



        </brls:Box>

    </brls:ScrollingFrame>

</brls:Box>