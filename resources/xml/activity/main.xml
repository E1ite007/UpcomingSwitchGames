<brls:AppletFrame
    iconInterpolation="linear"
    footerHidden="false">
    <brls:TabFrame
        title="@i18n/app/title">

        <brls:Tab label="@i18n/app/tabs/upcoming">
            <RecyclingListTab />
        </brls:Tab>

        <brls:Tab  label="@i18n/app/tabs/favorites">
            <FavoritesTab />
        </brls:Tab>

        <brls:Tab label="@i18n/app/tabs/settings">
            <SettingsTab />
        </brls:Tab>

        <brls:Separator />

        <!-- Static tab with inline XML -->
        <brls:Tab label="@i18n/app/tabs/about" >

            <brls:Box
                width="auto"
                height="auto"
                axis="column"
                paddingTop="@style/about/padding_top_bottom"
                paddingBottom="@style/about/padding_top_bottom"
                paddingLeft="@style/about/padding_sides"
                paddingRight="@style/about/padding_sides" >

                <brls:Label
                    width="auto"
                    height="auto"
                    fontSize="35"
                    horizontalAlign="center"
                    text="UpcomingSwitchGames"/>

                <brls:Image
                    width="auto"
                    height="33%"
                    image="@res/img/borealis_256.png"
                    marginTop="@style/about/description_margin"
                    marginBottom="@style/about/description_margin"/>

                <brls:Box
                    width="auto"
                    height="auto"
                    axis="row"
                    marginBottom="@style/about/description_margin">

                    <brls:Label
                        width="auto"
                        height="auto"
                        text="UcpomingSwitchGames is a simple app that allows you to see the upcoming games for the Nintendo Switch."
                        marginLeft="@style/about/description_margin" />

                </brls:Box>

                <brls:Box
                    width="auto"
                    height="auto"
                    axis="column"
                    alignItems="center"
                    justifyContent="spaceEvenly"
                    grow="1.0" >

                    <brls:Label
                        width="auto"
                        height="auto"
                        fontSize="12"
                        text="Find it on github.com/PoloNX/UpcomingSwitchGames" />

                    <brls:Label
                        width="auto"
                        height="auto"
                        fontSize="12"
                        text="Licensed under Apache 2.0" />

                </brls:Box>

            </brls:Box>

        </brls:Tab>

    </brls:TabFrame>
</brls:AppletFrame>
