<brls:AppletFrame
    iconInterpolation="linear"
    footerHidden="false">
    <brls:TabFrame
        title="@i18n/app/title">

        <brls:Tab label="@i18n/app/tabs/upcoming">
            <RecyclingListTab />
        </brls:Tab>

        <brls:Tab  label="@i18n/app/tabs/favorites">
            <FavoritesTab />
        </brls:Tab>

        <brls:Tab label="@i18n/app/tabs/settings">
            <SettingsTab />
        </brls:Tab>

        <brls:Separator />

        <!-- Static tab with inline XML -->
        <brls:Tab label="@i18n/app/tabs/about" >

            <brls:Box
                width="auto"
                height="auto"
                axis="column"
                paddingTop="@style/about/padding_top_bottom"
                paddingBottom="@style/about/padding_top_bottom"
                paddingLeft="@style/about/padding_sides"
                paddingRight="@style/about/padding_sides" >

                <brls:Box
                    width="auto"
                    height="auto"
                    axis="column"
                    marginBottom="@style/about/description_margin">

                    <brls:Label
                        width="auto"
                        height="auto"
                        fontSize="35"
                        horizontalAlign="center"
                        text="@i18n/app/title"/>

                    <brls:Label
                        width="auto"
                        height="auto"
                        text="@i18n/app/about/description"
                        horizontalAlign="center"
                        marginTop="30px"/>

                </brls:Box>

                <brls:Box
                    width="auto"
                    height="auto"
                    axis="column"
                    alignItems="center"
                    grow="1.0" >

                    <brls:Label
                        width="auto"
                        height="auto"
                        fontSize="12"
                        text="@i18n/app/about/github" />

                    <brls:Label
                        width="auto"
                        height="auto"
                        fontSize="12"
                        text="@i18n/app/about/license" />

                </brls:Box>

            </brls:Box>

        </brls:Tab>

    </brls:TabFrame>
</brls:AppletFrame>
